{
  "manifest_version": 2,

  "name": "ImGrab",
  "description": "This extension grabs images from FaceBook Comments",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
  "tabs",
  "storage",
  "<all_urls>"
  ]
}
